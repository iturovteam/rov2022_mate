<?xml version="1.0"?>

<launch>
  <node pkg="robot_localization" type="ekf_localization_node" name="ekf_localization" clear_params="true">
    <param name="frequency" value="30"/>
    <param name="two_d_mode" value="false"/>
    <param name="transform_time_offset" value="0.0"/>
    <param name="print_diagnostics" value="true"/>

    <param name="odom_frame" value="odom"/>
    <param name="base_link_frame" value="iturov/base_link"/>
    <param name="world_frame" value="odom"/>

    <param name="imu0" value="mavros/imu/data"/>
    <param name="imu0_differential" value="false"/>
    <param name="imu0_relative" value="true"/>
    <param name="imu0_remove_gravitational_acceleration" value="true"/>
    <rosparam param="imu0_config">[false, false, false,
                   false, false, false,
                   false, false, false,
                   true,  true,  true,
                   true,  true,  true]</rosparam>

    <param name="odom0" value="iturov/pose_gt"/>
    <param name="odom0_differential" value="false"/>
    <param name="odom0_relative" value="false"/>
    <param name="odom0_queue_size" value="10"/>
    <rosparam param="odom0_config">[false, false, false,
                   false, false, false,
                   false, false, false,
                   true,  true,  true,
                   true,  true,  true]</rosparam>
  </node>

<!--
  <node pkg="tf" type="static_transform_publisher" name="world_to_odom" args="0 0 0 0 0 0 world odom 30"/>

-->
</launch>
